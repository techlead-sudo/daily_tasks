                  name="All Tasks" 
                  parent="menu_daily_tasks_tasks" 
                  action="action_all_daily_tasks" 
                  sequence="20"
                  groups="hr.group_hr_user"/>

        <!-- Reporting Submenu -->
        <menuitem id="menu_daily_tasks_reporting" 
                  name="Reporting" 
                  parent="menu_daily_tasks_root" 
                  sequence="20"
