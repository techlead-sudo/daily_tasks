                  sequence="10" 
                  web_icon="daily_tasks,static/description/icon.png"/>

        <!-- Tasks Submenu -->
        <menuitem id="menu_daily_tasks_tasks" 
                  name="Tasks" 
                  parent="menu_daily_tasks_root" 
                  sequence="10"/>

        <!-- My Tasks -->
