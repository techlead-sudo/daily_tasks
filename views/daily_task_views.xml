<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Daily Task Tree View -->
        <record id="daily_task_tree_view" model="ir.ui.view">
            <field name="model">daily.task</field>
            <field name="arch" type="xml">
                <tree string="Daily Tasks" decoration-success="state == 'done'" decoration-info="state == 'draft'">
                    <field name="date"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="manager_id"/>
                    <field name="pod_description" widget="text"/>
                    <field name="pod_submitted" string="POD Locked" widget="boolean_toggle"/>
                    <field name="sod_description" widget="text"/>
                    <field name="state" widget="badge" decoration-success="state == 'done'" decoration-info="state == 'draft'"/>
                </tree>
            </field>
        </record>

        <!-- Daily Task Form View -->
        <record id="daily_task_form_view" model="ir.ui.view">
            <field name="model">daily.task</field>
            <field name="arch" type="xml">
                <form string="Daily Task" class="daily_task_form">
                    <header>
                        <button name="action_submit_pod" string="Submit POD" type="object" 
                                class="btn-success" icon="fa-lock"
                                invisible="pod_submitted"
                                confirm="Once submitted, POD cannot be modified. Are you sure?"/>
                        <button name="action_mark_done" string="Mark as Done" type="object"
                                class="btn-success" icon="fa-check-circle" 
                                invisible="state == 'done'"/>
                        <button name="action_mark_draft" string="Mark as Draft" type="object"
                                class="btn-warning" icon="fa-undo" 
                                invisible="state == 'draft'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                        <field name="pod_submitted" invisible="1"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="date" readonly="1"/>
                                <field name="employee_id" options="{'no_create': True, 'no_edit': True}" readonly="1"/>
                                <field name="department_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="manager_id" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Plan of the Day (POD)" name="pod">
                                <div class="alert alert-success" role="alert" invisible="not pod_submitted">
                                    <i class="fa fa-lock"/> POD has been submitted and locked on <field name="pod_submitted_date" readonly="1"/>
                                </div>
                                <field name="pod_description" 
                                       placeholder="Enter your plan for the day..." 
                                       readonly="pod_submitted"/>
                            </page>
                            <page string="Summary of the Day (SOD)" name="sod">
                                <field name="sod_description" placeholder="Enter summary of what was accomplished..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Daily Task Search View -->
        <record id="daily_task_search_view" model="ir.ui.view">
            <field name="model">daily.task</field>
            <field name="arch" type="xml">
                <search string="Daily Tasks">
                    <field name="employee_id" string="Employee"/>
                    <field name="department_id" string="Department"/>
                    <field name="manager_id" string="Manager"/>
                    <field name="date" string="Date"/>
                    <filter string="My Tasks" name="my_tasks" 
                            domain="[('employee_id.user_id', '=', uid)]"/>
                    <filter string="Today" name="today" 
                            domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                    <filter string="This Week" name="this_week" domain="[]" context="{'search_default_this_week': 1}"/>
                    <field name="date" filter_domain="this_week"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Employee" name="group_employee" context="{'group_by': 'employee_id'}"/>
                        <filter string="Department" name="group_department" context="{'group_by': 'department_id'}"/>
                        <filter string="Manager" name="group_manager" context="{'group_by': 'manager_id'}"/>
                        <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Daily Task Calendar View -->
        <record id="daily_task_calendar_view" model="ir.ui.view">
            <field name="model">daily.task</field>
            <field name="arch" type="xml">
                <calendar string="Daily Tasks Calendar" date_start="date" color="employee_id" mode="month">
                    <field name="employee_id"/>
                    <field name="state"/>
                </calendar>
            </field>
        </record>

        <!-- Daily Task Graph View -->
        <record id="daily_task_graph_view" model="ir.ui.view">
            <field name="model">daily.task</field>
            <field name="arch" type="xml">
                <graph string="Daily Tasks Analysis" type="bar">
                    <field name="employee_id" type="row"/>
                    <field name="date" type="col" interval="week"/>
                    <field name="id" type="measure"/>
                </graph>
            </field>
        </record>

        <!-- Daily Task Pivot View -->
        <record id="daily_task_pivot_view" model="ir.ui.view">
            <field name="model">daily.task</field>
            <field name="arch" type="xml">
                <pivot string="Daily Tasks Pivot">
                    <field name="employee_id" type="row"/>
                    <field name="date" type="col" interval="month"/>
                    <field name="id" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- Daily Task Kanban View -->
        <record id="daily_task_kanban_view" model="ir.ui.view">
            <field name="name">daily.task.kanban</field>
            <field name="model">daily.task</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column daily_task_kanban">
                    <field name="id"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="date"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click" t-attf-class="state_{{ record.state.raw_value }}">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <span class="badge badge-primary" t-if="record.state.raw_value == 'draft'">Draft</span>
                                            <span class="badge badge-success" t-if="record.state.raw_value == 'done'">Done</span>
                                            <strong class="o_kanban_record_title">
                                                <t t-esc="record.employee_id.value"/>
                                            </strong>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <span class="text-info"><i class="fa fa-calendar"></i> <t t-esc="record.date.value"/></span><br/>
                                        <span class="text-secondary"><i class="fa fa-users"></i> <t t-esc="record.department_id.value"/></span><br/>
                                        <span class="text-warning"><i class="fa fa-user"></i> <t t-esc="record.manager_id.value"/></span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- My Tasks Action -->
        <record id="action_my_daily_tasks" model="ir.actions.act_window">
            <field name="res_model">daily.task</field>
            <field name="view_mode">tree,form,calendar,kanban</field>
            <field name="domain">[('employee_id.user_id', '=', uid)]</field>
            <field name="context">{'search_default_my_tasks': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first daily task!
                </p>
                <p>
                    Record your daily tasks with plan of the day (POD) and summary of the day (SOD).
                </p>
            </field>
        </record>

        <!-- All Tasks Action -->
        <record id="action_all_daily_tasks" model="ir.actions.act_window">
            <field name="res_model">daily.task</field>
            <field name="view_mode">tree,form,calendar,kanban</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No daily tasks found!
                </p>
                <p>
                    View and manage all employee daily tasks.
                </p>
            </field>
        </record>

        <!-- Reporting Action -->
        <record id="action_daily_tasks_reporting" model="ir.actions.act_window">
            <field name="res_model">daily.task</field>
            <field name="view_mode">graph,pivot,tree</field>
            <field name="context">{'search_default_group_employee': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No data for reporting!
                </p>
                <p>
                    Analyze daily tasks performance and trends.
                </p>
            </field>
        </record>

    </data>
</odoo>