<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Scheduled Action: Check for Unsubmitted POD at 11:00 AM -->
        <record id="ir_cron_check_unsubmitted_pod" model="ir.cron">
            <field name="name">Daily Tasks: POD Escalation Check</field>
            <field name="model_id" ref="model_daily_task"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_unsubmitted_pod()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <!-- nextcall omitted so cron runs on schedule; method will send only once daily at company 11:00 -->
            <field name="priority">5</field>
        </record>
        
    </data>
</odoo>
