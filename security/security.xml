<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Create Custom Groups for Daily Tasks -->
        <record id="group_daily_task_user" model="res.groups">
            <field name="name">Daily Tasks: User</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="comment">Can create and manage own daily tasks only</field>
        </record>

        <record id="group_daily_task_manager" model="res.groups">
            <field name="name">Daily Tasks: Manager</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="implied_ids" eval="[(4, ref('group_daily_task_user'))]"/>
            <field name="comment">Can view and manage all employee daily tasks</field>
        </record>

        <!-- Record Rule: Users can see their own tasks and tasks of their direct reports -->
        <record id="daily_task_user_rule" model="ir.rule">
            <field name="name">Daily Tasks: User Own and Reports Tasks</field>
            <field name="model_id" ref="model_daily_task"/>
            <field name="domain_force">['|', ('employee_id.user_id', '=', user.id), ('employee_id.parent_id', '=', user.employee_ids.id)]</field>
            <field name="groups" eval="[(4, ref('group_daily_task_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Record Rule: Managers can see all tasks -->
        <record id="daily_task_manager_rule" model="ir.rule">
            <field name="name">Daily Tasks: Manager All Tasks</field>
            <field name="model_id" ref="model_daily_task"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_daily_task_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rule: System Admin can see all tasks -->
        <record id="daily_task_system_rule" model="ir.rule">
            <field name="name">Daily Tasks: System Admin All Tasks</field>
            <field name="model_id" ref="model_daily_task"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
